<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, class: "form-control", autoforcus: true, id: "inputName", placeholder: "名前" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.attachment_field :profile_image, class: "form-control-file", placeholder: "image" %>
        </div>
        <div class="form-group">
          <div class="form-body">Introduction</div>
          <%= f.text_area :introduction, class: "form-control" %><br>
        </div>
        <div class="form-group">
          <%= f.submit "update user", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
